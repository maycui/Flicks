<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context="com.example.mayc.flicks.MovieDetailsActivity">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/white"
        android:layout_below="@+id/videoPreview"
        android:layout_alignRight="@+id/count"
        android:layout_alignEnd="@+id/count" />

    <RatingBar
        android:id="@+id/rbVoteAverage"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:theme="@style/RatingBar"
        android:stepSize="0.5"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="34dp"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_below="@+id/voteCount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/voteCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rbVoteAverage"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/voteCount"
        android:layout_alignBottom="@+id/voteCount"
        android:layout_toEndOf="@+id/voteCount"
        android:layout_toRightOf="@+id/voteCount"
        android:text=" Votes"
        android:textColor="@color/white"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/release"
        android:layout_alignBottom="@+id/release"
        android:layout_toRightOf="@+id/release"
        android:layout_toEndOf="@+id/release" />

    <TextView
        android:id="@+id/release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Release Date: "
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/white"
        android:layout_below="@+id/popularity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvOverview"
        android:text="Popularity: "
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOverview"
        android:layout_toEndOf="@+id/popularity"
        android:layout_toRightOf="@+id/popularity"
        android:textColor="@color/white"
        android:text="TextView"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/videoPreview"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvTitle"
        app:srcCompat="@android:color/black" />

</RelativeLayout>
